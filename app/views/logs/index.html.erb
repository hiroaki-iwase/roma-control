<h1>Logs#index</h1>
<p>Find me in app/views/logs/index.html.erb</p>

<% if false %>
<% @raw_logs.each{|instance, logs| %>
  <ul>
    <li><%= instance %></li>
    <ul>
      <% logs.each{|log| %>
        <li><%= log %></li>
      <% } %>
    </ul>
  </ul>
<% } %>
<% end %>


<!-- Nav tabs -->
<ul class="nav nav-tabs" role="tablist">

  <% @raw_logs.each_with_index{|(instance, logs), index|
    if index == 0 %>
      <li class="active"><a href="#<%= compact_instance(instance) %>" role="tab" data-toggle="tab"><%= instance %></a></li>
    <% else %>
      <li><a href="#<%= compact_instance(instance) %>" role="tab" data-toggle="tab"><%= instance %></a></li>
    <% end %>
  <% } %>
</ul>






<table class="table">
<thead>
  <tr>
    <th>Date</th>
    <th>LEVEL</th>
    <th>Logs</th>
  </tr>
</thead>
<tbody>
  <tr>
    <td>Date</td>
    <td>LEVEL</td>
    <td>Logs</td>
  </tr>

  <!-- Tab panes -->
  <% @raw_logs.each{|instance, logs| %>
    <div class="tab-content">
      <div class="tab-pane" id=<%= compact_instance(instance) %>>
        <% logs.each{|log|
          log =~ /([T:.\d-]+)\W+\d+\W+(\w+)\W+(.+)/ %>
          <tr>
          <td><%= $1 %></td>
          <td><%= $2 %></td>
          <td><%= $3 %></td>
          <tr>
        <% } %>
      </div>


    <% if false %>
    <% @raw_logs.each_with_index{|(instance, logs), index|
      if index == 0 %>
        <div class="tab-pane active" id=<%= compact_instance(instance) %>>
      <% else %>
        <div class="tab-pane" id=<%= compact_instance(instance) %>>
      <% end %>
        <% logs.each{|log|
          log =~ /([T:.\d-]+)\W+\d+\W+(\w+)\W+(.+)/ %>
          <li><%= "#{$1} #{$2} #{$3}" %></li>
        <% } %>
      </div>
    <% } %>
    <% end %>


    <% if false %>
    <!--table class="table table-condensed tablesorter"-->
    <table class="table">

      <thead>
        <tr>
          <th>Date</th>
          <th>Log Level</th>
          <th>Log</th>
        </tr>
      </thead>

      <tbody>
        <% if true %>
        <% @raw_logs.each_with_index{|(instance, logs), index| %>
          <% if index == 0 %>

            <% if false %>
            <div class="tab-pane" id=<%= compact_instance(instance) %>>
              <% logs.each{|log|
                log =~ /([T:.\d-]+)\W+\d+\W+(\w+)\W+(.+)/ %>
                <tr>
                  <td><%= $1 %></td>
                  <td><%= $2 %></td>
                  <td><%= $3 %></td>
                </tr>
              <% } %>
            </div>
            <% end %>

          <% end %>
        <% } %>
        <% end %>

      </tbody>
    </table>
    <% end %>

  </div>
  <% } %>

</tbody>
</table>
