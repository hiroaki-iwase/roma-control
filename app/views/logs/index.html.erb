<div class="main-contents-name">Log</div>


<% if false %>
<!--button class="btn btn-info" id="logs-button">
  Get logs
</button-->
<form method="post" action="/logs/show_logs">
<% if @raw_logs %>
  <button type="submit"  class="btn btn-warning" id="logs-button">Update</button>
<% else %>
  <button type="submit" class="btn btn-info" id="logs-button">Get Logs</button>
<% end %>
</form>
<% end %>



<% if true %>
<% if @raw_logs %>
  <a href="show_logs" type="button" class="btn btn-warning" id="logs-button">Update</a>
  <%#= button_to 'update', 'update', :class=>'btn btn-warning' %>
<% else %>
  <a href="show_logs" type="button" class="btn btn-info" id="logs-button">Get Logs</a>
  <%#= button_to 'vvv', 'index', :method => :get %>
  <%#= button_to 'get', 'show_logs', :class=>'btn btn-info' %>
<% end %>
<% end %>

<% if @raw_logs %>
<!-- Nav tabs -->
<div id="tabs">
  <!-- Tabs header -->
  <ul>
    <% @raw_logs.each_key{|instance| %>
      <li>
        <a id="<%=compact_instance(instance)%>-tabs" href="#<%= compact_instance(instance) %>">
          <%= instance %>
        </a>
      </li>
    <% } %>
  </ul>

  <!-- Tabs body -->
  <% @raw_logs.each{|instance, logs| %>
    <div id=<%= compact_instance(instance) %> class="panel">
      <table class="table tablesorter log-table">
        <thead>
          <tr>
            <td>Date</td>
            <td>LOG LEVEL</td>
            <td>LOG</td>
          </tr>
        </thead>
        <tbody>
          <% logs.each{|log|
          log =~ /([T:.\d-]+)\W+\d+\W+(\w+)\W+(.+)/ %>
            <tr>
              <td nowrap><%= $1 %></td>
              <td><span class="label label-<%=loglevel_colors($2)%>"><%= $2 %></span></td>
              <td><%= $3 %></td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  <% } %>
</div>
<% end %>

