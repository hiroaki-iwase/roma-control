<!DOCTYPE html>
<html>

<head>
  <title>Gladiator</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= csrf_meta_tags %>
</head>

<body>
  <div id="wrap-without-footer">
    <div id="header">
      <div class="navbar navbar-default" role="navigation">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="/cluster/index" >
              <%= image_tag "Gladiator_logo.png", :size => '40x40' %>
              <span class="header-title">GLADIATOR</span>
              <span class="header-subtitle">-roma control-</span>
            </a>
          </div>
          <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
              <% if session[:username] %>
                <!--[ToDO] make link to How to make gravatar account -->
                <li><img class='glavatar' src=<%= get_gravatar_src(session[:email]) %>></li>
                <li class='username'><%= session[:username] %></li>
                <li data-toggle="tooltip_logout" title="Logout">
                  <%= link_to image_tag('logout_icon.png', :size => "30x30"), "/login/logout", { :class => "logout-icon" } %>
                  <%= link_to image_tag('logout_icon_blue.png', :size => "30x30"), "/login/logout", { :class => "logout-icon-blue" } %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div><!--header-->

    <div class="wrap-main">
      <% if @authorization %>
        <div class="container">
          <div class="row-fluid">
            <div class="col-md-3">
              <div class="list-group">
                <a href="/cluster/index"      class="list-group-item">Cluster</a>
                <a href="/stat/index" class="list-group-item">Status</a>
                <a href="/path3"      class="list-group-item">Configuration[toDO]</a>
                <a href="/path4"      class="list-group-item">Snapshot[toDO]</a>
                <a href="/path5"      class="list-group-item">Key/Value[toDO]</a>
                <a href="/path5"      class="list-group-item">logs[toDO]</a>
                <a href="/path5"      class="list-group-item">History[toDO]</a>
              </div>
            </div><!--/col-md-3-->
            <div class="col-md-9" id="param-detail-list">
              <%= yield %>
            </div><!--/col-md-9-->
          </div><!--/row-->
        </div><!--/container-->

      <% else %>
        <%= yield %>
      <% end %>
    </div><!--wrap-main-->
  </div><!--wrap-->

  <div id="footer">
    <div class="container">
      <p>@ 2014 Roma Project / Sponsored by Rakuten, Inc. and Rakuten Institute of Technology</p>
    </div>
  </div><!-- /footer -->

  <%= javascript_include_tag "application" %>
</body>
</html>
