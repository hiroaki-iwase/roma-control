<link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">

<h1><U>Status</U>
<button type="button" class="btn btn-default btn-lg" style="background-color: #debdbd;">
  <a href="" data-no-turbolink="1"><i class="icon-refresh" style="color: #6f3737; font-size:20px;"></i></a>
</button>
</h1>
<dl>
  <% Constants::STATS_COL_NAME.each{|name| %>
  <dt><%= name.capitalize %></dt>
  <dd>
    <table class="table">
      <tbody>
        <% if @stats_hash[name].size == 0 %>
          <tr class="no-data-col"><td colspan="2">No Data</td></tr>
        <% end %>

        <% @stats_hash[name].each{|k,v|
          next if check_skip_columns(k)
          # for storage option
          if /bnum=(\d+)#xmsiz=(\d+)#opts=([a-z])#dfunit=(\d+)/ =~ v %>
            <tr><td><a href="#" data-toggle="tooltip" title="<%= explanation k %>" class="stats-str"><%= k %></a></td><td></td></tr>
            <tr><td>　　　　bnum  </td><td><%= $1 %></td></tr>
            <tr><td>　　　　xmsiz </td><td><%= $2 %></td></tr>
            <tr><td>　　　　opts  </td><td><%= $3 %></td></tr>
            <tr><td>　　　　dfunit</td><td><%= $4 %></td></tr>
          <% next; end %>
          <tr <% if v.chomp == "false" %>class="not-change-col"<% end %>>
            <td valign="top" >
              <a href="#" data-toggle="tooltip" title="<%= explanation k %>" class="stats-str"><%= k %></a></td>
            <td valign="top" ><%= v %></td>
          </tr>
        <% } %>
      </tbody>
    </table> 
  </dd>
  <% } %>
</dl>
