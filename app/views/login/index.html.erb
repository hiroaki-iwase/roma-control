<h1>Login#index</h1>
<p style="color: Red"><%= flash[:error] %></p>
<p style="color: Red"><%= flash[:filter_msg] %></p>

<%= form_tag :action => 'auth' do %>
  <div class="field">
    <label> username : </label>
    <div><%= text_field_tag(:username, '', { :size => 30 }) %></div>
  </div>

  <div class="field">
    <label> password : </label>
    <div><%= password_field_tag(:password, '', { :size => 30 }) %></div>
  </div>

  <% if flash[:referer] %>
    <%= hidden_field_tag :referer, flash[:referer] %>
  <% end %>

  <%= submit_tag 'login to Gladiator' %>
<% end %>
